                                        <span class="title">Others</span>
                                    </label>
                                </li>
                            </ul>

                        </div>

                        <button type="button" class=" theme-btn btn-style-one d-block w-100 my-3">Find Jobs</button>

                    </div>

                </div>
                <!--  -->
                <div class="inner-column">
                    <div class="filters-outer">
                        <button type="button" class="theme-btn close-filters">X</button>

                        <!-- Filter Block -->
                        <div class="filter-block">
                            <h4>Job Alert</h4>
                            <div class="mb-3 w-100">
                                <label for="job-alert-title">Title</label>
                                <input type="text" class="px-3" name="job-alert-title" id="job-alert-title" placeholder="Title" required>

                            </div>
                            <!-- Filter Block -->
                            <div class="filter-block">
                                <div class="form-group">

                                    <select class="chosen-select px-3" id="email-freq" required>
                                        <option>Email Frequency</option>
                                        <option>Daily</option>
                                        <option>Weekly</option>
                                        <option>Fortnight</option>
                                        <option>Monthly</option>
                                    </select>
                                    <span class="icon flaticon-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <button type="button" class=" theme-btn btn-style-one d-block w-100 my-3">Save Job Alert</button>
                    </div>

                </div>
            </div>

            <!-- Content Column -->
            <div class="content-column col-lg-8 col-md-12 col-sm-12">
                <div class="ls-outer">
                    <button type="button" class="theme-btn btn-style-two toggle-filters">Show Filters</button>

                    <!-- ls Switcher -->
                    <div class="ls-switcher">
                        <div class="showing-result">
                            <div class="text">Showing <strong>41-60</strong> of <strong>944</strong> jobs</div>
                        </div>
                        <div class="sort-by">
                            <select class="chosen-select">
                                <option>New Jobs</option>
                                <option>Freelance</option>
                                <option>Full Time</option>
                                <option>Internship</option>
                                <option>Part Time</option>
                                <option>Temporary</option>
                            </select>

                            <select class="chosen-select">
                                <option>Show 10</option>
                                <option>Show 20</option>
                                <option>Show 30</option>
                                <option>Show 40</option>
                                <option>Show 50</option>
                                <option>Show 60</option>
                            </select>
                        </div>
                    </div>


                    <!-- Job Block -->
                    <!-- Ready for work on it -->
                    @foreach (var job in Model)
                    {
                        <div class="job-block">
                            <div class="inner-box">
                                <div class="content">
                                    <span class="company-logo">
                                        <img src="@string.Format("/Uploads/Images/{0}",job.imageUrl)" alt=""/>
                                             
                                    </span>
                                    <h4><a asp-controller="Job" asp-action="JobDescription" asp-route-id="@job.Id">@job.title</a></h4>
                                    <ul class="job-info">
                                        <li><span class="icon flaticon-briefcase"></span> @job.kind?.kind</li>
                                        <li><span class="icon flaticon-map-locator"></span> @job.jobLocation</li>
                                        <li><span class="icon flaticon-clock-3"></span> @job.CreatedDate?.ToString("hh:mm:tt")</li>
                                        <li><span class="icon flaticon-money"></span> @job.salary $</li>
                                    </ul>
                                    <ul class="job-other-info">
                                        <li class="time">@job.type?.Type</li>
                                        <li class="privacy">@job.privacey?.privacey</li>
                                        <li class="required">@job.status?.status</li>
                                    </ul>
                                    <button class="bookmark-btn"><span class="flaticon-bookmark"></span></button>
                                </div>
                            </div>
                        </div>
                    }
