@model Employees
@{
    Layout = "_layout";
}
<title>Emplyer Descrioption - OUTSOURCY </title>
<!-- Job Detail Section -->
<section class="job-detail-section">
    <!-- Upper Box -->
    <div class="upper-box">
        <div class="auto-container">
            <!-- Job Block -->
            <div class="job-block-seven">
                <div class="inner-box">
                    <div class="content">
                        <span class="company-logo"><img src="@string.Format("/Uploads/Images/{0}",Model.imgUrl)" alt=""></span>
                        <h4><a href="#">@Model.fullName</a></h4>
                        <ul class="job-info">
                            <li><span class="icon flaticon-briefcase"></span>@Model.companyCategories?.companyCategoryName</li>
                            <li><span class="icon flaticon-telephone-1"></span> @Model.phoneNumber</li>
                            <li><span class="icon flaticon-mail"></span> @Model.email</li>
                        </ul>
                        <ul class="job-other-info">
                            <li class="time">Open Jobs – 3</li>
                        </ul>
                    </div>

                    <div class="btn-box">
                        <a href="#" class="theme-btn btn-style-one">Private Message</a>
                        <button class="bookmark-btn"><i class="flaticon-bookmark"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="job-detail-outer">
        <div class="auto-container">
            <div class="row">
                <div class="content-column col-lg-8 col-md-12 col-sm-12">
                    <div class="job-detail">
                        <h4>About Company</h4>
                        <p>
                            @Model?.aboutCompany
                        </p>
                        <p>Our services include:_</p>
                        @if (string.IsNullOrEmpty(Model?.services))
                        {
                            <p>No Services yet</p>
                        }
                        else
                        {
                            foreach (var service in Model.services.Split(','))
                            {
                                <p>@service?</p>
                            }

                        }
                        <p>
                            We have highly experienced teams who are committed to providing best-in-class service that meets our customer’s needs
                            for cost efficiency without compromising quality or compliance standards.
                        </p>
                        <p>
                            All things considered, if you’re looking for a trusted partner to help your organization succeed then look no further
                            than OUTSOURCY– we guarantee you won’t regret it!
                        </p>
                        <p>
                            For more info. about our main services please contact us at contact@out-sourcy.com or call us at +201121119902 or
                            send us a message here: https://www.out-sourcy.com/contact
                        </p>
                        <p>Seeking a job? please send your CV to @Model.businessEmail or call us on @Model.phoneNumber</p>
                        <h4>About Company</h4>
                        <p>Dokki</p>
                    </div>
                    <div class="social-links emp_social">
                        <p>Social Profiles:</p>
                        <div class="emp_social_link">
                            <a href="#"><i class="fab fa-facebook-f"></i></a>
                            <a href="#"><i class="fab fa-twitter"></i></a>
                            <a href="#"><i class="fab fa-instagram"></i></a>
                            <a href="#"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                    <!-- Related Jobs -->
                    <div class="related-jobs">
                        <div class="title-box d-flex align-items-center justify-content-between">
                            <h3>Open Position</h3>
                            <a href="#" class="link">Browse Full List <span class="icon flaticon-right"></span></a>
                        </div>

                        <!-- Job Block -->
                        <div class="job-block">
                            <div class="inner-box">
                                <div class="content">
                                    <span class="company-logo"><img src="~/images/resource/company-logo/1-3.png" alt=""></span>
                                    <h4><a href="#">Senior Full Stack Engineer, Creator Success</a></h4>
                                    <ul class="job-info">
                                        <li><span class="icon flaticon-briefcase"></span> Segment</li>
                                        <li><span class="icon flaticon-map-locator"></span> London, UK</li>
                                        <li><span class="icon flaticon-clock-3"></span> 11 hours ago</li>
                                        <li><span class="icon flaticon-money"></span> $35k - $45k</li>
                                    </ul>
                                    <ul class="job-other-info">
                                        <li class="time">Full Time</li>
                                        <li class="required">Urgent</li>
                                    </ul>
                                    <button class="bookmark-btn"><span class="flaticon-bookmark"></span></button>
                                </div>
                            </div>
                        </div>

                        <!-- Job Block -->
                        <div class="job-block">
                            <div class="inner-box">
                                <div class="content">
                                    <span class="company-logo"><img src="~/images/resource/company-logo/1-3.png" alt=""></span>
                                    <h4><a href="#">Web Developer</a></h4>
                                    <ul class="job-info">
                                        <li><span class="icon flaticon-briefcase"></span> Segment</li>
                                        <li><span class="icon flaticon-map-locator"></span> London, UK</li>
                                        <li><span class="icon flaticon-clock-3"></span> 11 hours ago</li>
                                        <li><span class="icon flaticon-money"></span> $35k - $45k</li>
                                    </ul>
                                    <ul class="job-other-info">
                                        <li class="time">Part Time</li>
                                        <li class="required">Urgent</li>
                                    </ul>
                                    <button class="bookmark-btn"><span class="flaticon-bookmark"></span></button>
                                </div>
                            </div>
                        </div>

                        <!-- Job Block -->
                        <div class="job-block">
                            <div class="inner-box">
                                <div class="content">
                                    <span class="company-logo"><img src="~/images/resource/company-logo/1-3.png" alt=""></span>
                                    <h4><a href="#">Sr. Full Stack Engineer</a></h4>
                                    <ul class="job-info">
                                        <li><span class="icon flaticon-briefcase"></span> Segment</li>
                                        <li><span class="icon flaticon-map-locator"></span> London, UK</li>
                                        <li><span class="icon flaticon-clock-3"></span> 11 hours ago</li>
                                        <li><span class="icon flaticon-money"></span> $35k - $45k</li>
                                    </ul>
                                    <ul class="job-other-info">
                                        <li class="time">Part Time</li>
                                    </ul>
                                    <button class="bookmark-btn"><span class="flaticon-bookmark"></span></button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="sidebar-column col-lg-4 col-md-12 col-sm-12">
                    <aside class="sidebar">
                        <div class="sidebar-widget company-widget">
                            <div class="widget-content">
                                <a class="btn btn-primary" asp-controller="Employee"asp-action="EmployerProfileDashboard" asp-route-id="@Model.userId">Edit Profile</a>
                                <ul class="company-info mt-0">
                                    <li>categories: <span><a href="#" class="">@Model.Categories?.CategoryName</a></span></li>
                                    <li>Founded Date: <span>@Model.foundedDate?.ToString("MMM dd-yyyy")</span></li>
                                    <li>Company Size: <span>@Model.companySize </span></li>
                                    <li>Phone Number: <span>@Model.phoneNumber</span></li>
                                    <li>Business Email: <span>@Model.businessEmail</span></li>
                                    <li>Location: <span>@Model.location</span></li>
                                    <li>
                                        Social media:
                                        <div class="social-links">
                                            <a href="#"><i class="fab fa-facebook-f"></i></a>
                                            <a href="#"><i class="fab fa-twitter"></i></a>
                                            <a href="#"><i class="fab fa-instagram"></i></a>
                                            <a href="#"><i class="fab fa-linkedin-in"></i></a>
                                        </div>
                                    </li>
                                </ul>

                                <div class="btn-box"><a href="#" class="theme-btn btn-style-three">https://out-sourcy.com/</a></div>
                            </div>
                        </div>

                        <div class="sidebar-widget">
                            <!-- Map Widget -->
                            <h4 class="widget-title">Employer Location</h4>
                            <div class="widget-content">
                                <div class="map-outer mb-0">
                                    <!-- <div class="map-canvas" data-zoom="12" data-lat="-37.817085" data-lng="144.955631" data-type="roadmap"
                                      data-hue="#ffc400" data-title="Envato" data-icon-path="~/images/resource/map-marker.png"
                                      data-content="Melbourne VIC 3000, Australia<br><a href='mailto:info@youremail.com'>info@youremail.com</a>">
                                    </div> -->
                                    <iframe class="map-canvas" loading="lazy"
                                            src="https://maps.google.com/maps?q=65%20El-Ansar%2C%20Ad%20Doqi%2C%20Dokki%2C%20Giza%20Governorate%203751043%2C%20Egypt&amp;t=m&amp;z=14&amp;output=embed&amp;iwloc=near"
                                            title="65 El-Ansar, Ad Doqi, Dokki, Giza Governorate 3751043, Egypt"
                                            aria-label="65 El-Ansar, Ad Doqi, Dokki, Giza Governorate 3751043, Egypt"></iframe>
                                </div>
                            </div>
                        </div>
                        <div class="sidebar-widget contact-widget">
                            <h4 class="widget-title">Contact OUTSOURCY</h4>
                            <div class="widget-content">
                                <!-- Comment Form -->
                                <div class="default-form">
                                    <!--Comment Form-->
                                    <form>
                                        <div class="row clearfix">
                                            <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                                <input type="text" name="Subject" placeholder="Subject" required>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                                <input type="email" name="email" placeholder="Your Email" required>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                                <input type="text" name="" placeholder="011140001682" required>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                                <textarea class="darma" name="message" placeholder="Message"></textarea>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                                <button class="theme-btn btn-style-one" type="submit" name="submit-form">Send Message</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Job Detail Section -->