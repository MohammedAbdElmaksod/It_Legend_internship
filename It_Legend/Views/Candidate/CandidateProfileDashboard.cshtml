@model Candidates
@{
    Layout = "_dashboardlayout";
}
<title>Candidate Profile Dashboard - Outsourcy</title>


<!-- Dashboard -->
<section class="user-dashboard">
    <div class="dashboard-outer">
        <div class="upper-title-box">
            <h3>Edit Profile</h3>

        </div>
        <!-- Start Tab Box -->
        <div class="default-tabs tabs-box">
            <!--Tabs Box-->
            <div class="tab-buttons-wrap">
                <ul class="tab-buttons">
                    <li class="tab-btn btn_tab_profile active-btn" data-tab="#general-info">General Info</li>
                    <li class="tab-btn btn_tab_profile" data-tab="#experience-skills">Experience & Skills</li>
                    <li class="tab-btn btn_tab_profile" data-tab="#contact-info">Contact Info</li>
                </ul>
            </div>

            <div class="tabs-content pt-40 wow fadeInUp">
                <!--Tab-->
                <div class="tab active-tab" id="general-info">
                    <div class="row">
                        <div class="col-lg-12">
                            <!-- Start Form -->
                            <form action="" class="w-100">
                                <!-- Ls widget -->
                                <div class="ls-widget">
                                    <div class="tabs-box">
                                        <div class="widget-title">
                                        </div>

                                        <div class="widget-content">

                                            <div class="uploading-outer">
                                                <div class="uploadButton">
                                                    <input class="uploadButton-input" type="file" name="attachments[]" accept="image/*, application/pdf"
                                                           id="upload" multiple />
                                                    <label class="uploadButton-button ripple-effect" for="upload">Browse Logo</label>
                                                    <span class="uploadButton-file-name"></span>
                                                </div>
                                                <div class="text">
                                                    Max file size is 1MB, Minimum dimension: 330x300 And Suitable files are .jpg & .png
                                                </div>
                                            </div>

                                            <div class="uploading-outer">
                                                <div class="uploadButton">
                                                    <input class="uploadButton-input" type="file" name="attachments[]" accept="image/*, application/pdf"
                                                           id="upload_cover" multiple />
                                                    <label class="uploadButton-button ripple-effect" for="upload">Browse Cover</label>
                                                    <span class="uploadButton-file-name"></span>
                                                </div>
                                                <div class="text">
                                                    Max file size is 1MB, Minimum dimension: 330x300 And Suitable files are .jpg & .png
                                                </div>
                                            </div>

                                            <div class="default-form">
                                                <div class="row">
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>First name <span class="text-danger">*</span></label>
                                                        <input type="text" name="first-name" placeholder="First name " required>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Middle name </label>
                                                        <input type="text" name="middle-name" placeholder="Middle name ">
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Last name <span class="text-danger">*</span></label>
                                                        <input type="text" name="last-name" placeholder="Last name " required>
                                                    </div>
                                                    <!--  Empty Col Space  -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                    </div>
                                                    <!-- Select Options  -->
                                                    <div class="form-group col-lg-12 col-md-12">
                                                        <label>Birthdate <span class="text-danger">*</span></label>
                                                        <div class="d-flex align-items-center justify-content-between gap-2 w-100">
                                                            <!--  -->
                                                            <select class="chosen-select flex-fill">
                                                                <option>00</option>
                                                                <option>01</option>
                                                                <option>02</option>
                                                                <option>03</option>
                                                                <option>04</option>
                                                                <option>05</option>
                                                                <option>06</option>
                                                                <option>07</option>
                                                                <option>08</option>
                                                            </select>
                                                            <!--  -->
                                                            <select class="chosen-select flex-fill">
                                                                <option>January</option>
                                                                <option>01</option>
                                                                <option>02</option>
                                                                <option>03</option>
                                                                <option>04</option>
                                                                <option>05</option>
                                                                <option>06</option>
                                                                <option>07</option>
                                                                <option>08</option>
                                                            </select>
                                                            <!--  -->
                                                            <select class="chosen-select flex-fill">
                                                                <option>1999</option>
                                                                <option>1991</option>
                                                                <option>1992</option>
                                                                <option>1993</option>
                                                                <option>1994</option>
                                                                <option>1995</option>
                                                                <option>1996</option>
                                                                <option>1997</option>
                                                                <option>1998</option>
                                                            </select>
                                                        </div>

                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Gender </label>
                                                        <select class="chosen-select">
                                                            <option>Male</option>
                                                            <option>Female</option>
                                                            <option>Both</option>
                                                        </select>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Marital Status </label>
                                                        <select class="chosen-select">
                                                            <option>Single</option>
                                                            <option>Enga</option>
                                                            <option>Marrid</option>
                                                        </select>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Military Status </label>
                                                        <select class="chosen-select">
                                                            <option>Complated</option>
                                                            <option></option>
                                                            <option></option>
                                                        </select>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Do you Have a Driving License? </label>
                                                        <select class="chosen-select">
                                                            <option>Yes</option>
                                                            <option>No</option>

                                                        </select>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Tag Line</label>
                                                        <input type="text" name="tag-line" placeholder="Tag Line " required>
                                                    </div>
                                                    <!--  Empty Col Space  -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-12 col-md-12 ">
                                                        <label>your Location <span class="text-danger">*</span></label>
                                                        <div class="d-flex align-items-center justify-content-between gap-2 w-100">
                                                            <input type="text" name="job-llocation-Country" class="flex-fill" placeholder="Country">
                                                            <input type="text" name="job-llocation-City" class="flex-fill" placeholder="City">
                                                            <input type="text" name="job-llocation-Area" class="flex-fill" placeholder="Area">
                                                        </div>
                                                    </div>
                                                    <!--  -->
                                                    <h4>Education</h4>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Degree Level </label>
                                                        <select class="chosen-select">
                                                            <option>Certificate</option>
                                                            <option>Associate Degree</option>
                                                            <option>Bachelor Degree</option>
                                                            <option>Master’s Degree</option>
                                                        </select>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Country  </label>
                                                        <select class="chosen-select">
                                                            <option>Egypt</option>
                                                            <option></option>
                                                            <option></option>
                                                            <option></option>
                                                        </select>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-12 col-md-12">
                                                        <label>University/Institution : </label>
                                                        <input type="email" name="university " placeholder="University/Institution  ">
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-12 col-md-12">
                                                        <label>field(s) of Study: </label>
                                                        <input type="email" name="field-study " placeholder="field(s) of Study ">
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Start Year <span class="text-danger">*</span></label>
                                                        <input type="text" name="start-year" placeholder="Start Year" required>
                                                    </div>

                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>End Year : <span class="text-danger">*</span></label>
                                                        <input type="text" name="end-year" placeholder="End Year">
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Grade </label>
                                                        <select class="chosen-select">
                                                            <option>Very Good</option>
                                                            <option></option>
                                                            <option></option>
                                                            <option></option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group col-lg-12 col-md-12">
                                                        <button type="button" class="theme-btn btn-style-one">Add Degree</button>
                                                    </div>
                                                    <!-- Button -->
                                                    <div class="form-group col-lg-12 col-md-12">
                                                        <button type="submit" class="theme-btn btn-style-one">Save Changes</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>


                            </form>
                            <!-- End  Form -->
                        </div>

                    </div>
                </div>

                <!--Tab-->
                <div class="tab " id="experience-skills">
                    <div class="row">
                        <div class="col-lg-12">
                            <!-- Start Form -->
                            <form action="" class="w-100">
                                <!-- Ls widget -->
                                <div class="ls-widget">
                                    <div class="tabs-box">
                                        <div class="widget-title">
                                            <h3>Experience</h3>
                                        </div>

                                        <div class="widget-content">


                                            <div class="default-form">
                                                <div class="row">
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-12 col-md-12">
                                                        <label>how many years of experience do you have ?</label>
                                                        <input type="text" name="experience-1" placeholder="how many years of experience do you have" required>
                                                    </div>
                                                    <!-- title -->
                                                    <div class="widget-title">
                                                        <h3>Skills</h3>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Skill name <span class="text-danger">*</span></label>
                                                        <input type="text" name="skill-name" placeholder="Skill name" required>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Years of Experience <span class="text-danger">*</span></label>
                                                        <input type="text" name="yeats-ex" placeholder="Years of Experience" required>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Proficiency : <span class="text-danger">*</span></label>
                                                        <select class="chosen-select">
                                                            <option>4 Out of 5</option>
                                                            <option></option>
                                                            <option></option>
                                                        </select>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Interest :<span class="text-danger">*</span></label>
                                                        <select class="chosen-select">
                                                            <option>3 Out of 5</option>
                                                            <option></option>
                                                            <option></option>
                                                        </select>
                                                    </div>
                                                    <!--Add Just -->
                                                    <div class="form-group col-lg-12 col-md-12">
                                                        <label>Add Justification  </label>
                                                        <textarea placeholder="Add Justification "></textarea>
                                                    </div>
                                                    <!-- Button -->
                                                    <div class="form-group col-lg-12 col-md-12">
                                                        <button type="button" class="theme-btn btn-style-one">Add Skill</button>
                                                    </div>
                                                    <!-- title -->
                                                    <div class="widget-title">
                                                        <h3>Languages</h3>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Language :<span class="text-danger">*</span></label>
                                                        <select class="chosen-select">
                                                            <option>Arabic</option>
                                                            <option></option>
                                                            <option></option>
                                                        </select>
                                                    </div>
                                                    <!--Add Just -->
                                                    <div class="form-group col-lg-12 col-md-12">
                                                        <label>Add Justification </label>
                                                        <textarea placeholder="Add Justification "></textarea>
                                                    </div>
                                                    <!-- Button -->
                                                    <div class="form-group col-lg-12 col-md-12">
                                                        <button type="button" class="theme-btn btn-style-one">Add Language</button>
                                                    </div>
                                                    <!-- Button -->
                                                    <div class="form-group col-lg-12 col-md-12">
                                                        <button type="submit" class="theme-btn btn-style-one">Save Changes</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>


                            </form>
                            <!-- End  Form -->
                        </div>

                    </div>
                </div>

                <!--Tab-->
                <div class="tab" id="contact-info">
                    <div class="row">
                        <div class="col-lg-12">
                            <!-- Start Form -->
                            <form action="" class="w-100">
                                <!-- Ls widget -->
                                <div class="ls-widget">
                                    <div class="tabs-box">
                                        <div class="widget-title">
                                            <h3>Contact Info</h3>
                                        </div>
                                        <div class="widget-content">
                                            <div class="default-form">
                                                <div class="row">
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Mobile Number <span class="text-danger">*</span></label>
                                                        <input type="text" name="mobile-number" placeholder="Mobile Number" required>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Alternative Number  </label>
                                                        <input type="text" name="altertanive-number" placeholder="Alternative Number ">
                                                    </div>
                                                    <!-- Upload CV -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <div class="uploading-outer">
                                                            <div class="uploadButton">
                                                                <input class="uploadButton-input" type="file" name="attachments[]" accept="image/*, application/pdf" id="upload"
                                                                       multiple />
                                                                <label class="uploadButton-button ripple-effect" for="upload">Upload CV </label>
                                                                <span class="uploadButton-file-name"></span>
                                                            </div>
                                                        </div>

                                                    </div>
                                                    <!-- title -->
                                                    <div class="widget-title">
                                                        <h3>Online Presence</h3>
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>LinkedIn </label>
                                                        <input type="text" name="linkedin" placeholder="LinkedIn">
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Facebook </label>
                                                        <input type="text" name="facebook" placeholder="Facebook">
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Twitter </label>
                                                        <input type="text" name="twitter" placeholder="Twitter">
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Instagram </label>
                                                        <input type="text" name="instagram" placeholder="Instagram">
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Google+</label>
                                                        <input type="text" name="google" placeholder="Google+">
                                                    </div>
                                                    <!-- Input -->
                                                    <div class="form-group col-lg-6 col-md-12">
                                                        <label>Behance </label>
                                                        <input type="text" name="behance" placeholder="Behance">
                                                    </div>
                                                    <!-- Button -->
                                                    <div class="form-group col-lg-12 col-md-12">
                                                        <button type="submit" class="theme-btn btn-style-one">Save Changes</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>


                            </form>
                            <!-- End  Form -->
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <!-- End Tab Box  -->

    </div>
</section>
<!-- End Dashboard -->
