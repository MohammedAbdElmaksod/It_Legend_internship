@{
    Layout = "_dashboardlayout";
}



<!-- Dashboard -->
<section class="user-dashboard">
    <div class="dashboard-outer">
        <div class="upper-title-box">
            <h3>Applied Jobs</h3>

        </div>

        <div class="row">
            <div class="col-lg-12">
                <!-- Ls widget -->
                <div class="ls-widget">
                    <div class="tabs-box">
                        <div class="widget-title">
                            <!--search box-->
                            <div class="search-box-one">
                                <form method="post" action="blog.html">
                                    <div class="form-group">
                                        <span class="icon flaticon-search-1"></span>
                                        <input type="search" name="search-field" value="" placeholder="Search"
                                               required="">
                                    </div>
                                </form>
                            </div>

                            <div class="chosen-outer">
                                <!--Tabs Box-->
                                <label for="" class="lh-sm w-50 "> Sort by:</label>
                                <select class="chosen-select">
                                    <option>Newest</option>
                                    <option>Oldset</option>
                                    <option>Default</option>
                                </select>
                            </div>
                        </div>

                        <div class="widget-content">
                            <div class="table-outer">
                                <table class="default-table manage-job-table">
                                    <thead>
                                        <tr>
                                            <th>Job Title</th>
                                            <th>Date Applied</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <!-- Item -->
                                        <tr>
                                            <td>
                                                <!-- Job Block -->
                                                <div class="job-block">
                                                    <div class="inner-box">
                                                        <div class="content">
                                                            <span class="company-logo"><img src="~/images/resource/company-logo/1-1.png" alt=""></span>
                                                            <h4><a href="#">Senior Full Stack Engineer, Creator Success</a></h4>

                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>Dec 5, 2020</td>
                                            <td class="status">Active</td>
                                            <td>
                                                <div class="option-box">
                                                    <ul class="option-list">
                                                        <li><button data-text="View Aplication"><span class="la la-eye"></span></button></li>
                                                        <li><button data-text="Delete Aplication"><span class="la la-trash"></span></button></li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>
<!-- End Dashboard -->
