@model userModel
@{
    Layout = "_layout";
}
<title>Register</title>
<br />
<br />
<!-- Modal Register -->
<div id="register-modal" tabindex="-1" aria-labelledby="register modal" data-bs-backdrop="static"
     data-bs-keyboard="false" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="">Create a free Outsourcy account</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Register Form -->
                <div class="login-form default-form">
                    <div class="form-inner">
                        <!-- Start Tab Box -->
                        <div class="default-tabs tabs-box">
                            <!--Tabs Box-->
                            <div class="tab-buttons-wrap">
                                <ul class="tab-buttons">
                                    <li class="tab-btn theme-btn  tab_reg active-btn" data-tab="#reg-candidate"> <i class="la la-user"></i> Candidate</li>
                                    <li class="tab-btn theme-btn  tab_reg" data-tab="#reg-employer"><i class="la la-briefcase"></i>Employer</li>
                                </ul>
                            </div>
                            <div class="tabs-content pt-2 wow fadeInUp">
                                <!--Tab-->
                                <div class="tab active-tab" id="reg-candidate">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <!--Register Form-->
                                            <form method="post" asp-controller="Users" asp-action="Register" enctype="multipart/form-data">
                                                <div class="form-group">
                                                    <label>Email <sup class="text-danger">*</sup></label>
                                                    <input type="email" asp-for="Email" placeholder="Email" required>
                                                    <span asp-validation-for="Email" style="color:red"></span>
                                                </div>

                                                <div class="form-group">
                                                    <label>Password <sup class="text-danger">*</sup></label>
                                                    <input id="password-field" type="password" asp-for="Password" placeholder="Password" required>
                                                    <span asp-validation-for="Password" style="color:red"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label>Confirm Password <sup class="text-danger">*</sup></label>
                                                    <input id="confirm-password-field" type="password"asp-for="ConfirmPassword"
                                                           placeholder="Confirm Password " required>
                                                    <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                                                </div>

                                                <div class="form-group">
                                                    <label>Full Name <sup class="text-danger">*</sup></label>
                                                    <input type="text" placeholder="Full Name" required asp-for="FullName">
                                                    <span asp-validation-for="FullName" style="color:red"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label>Phone Number <sup class="text-danger">*</sup></label>
                                                    <input type="text" placeholder="Phone Number" required asp-for="PhoneNumber">
                                                    <span asp-validation-for="PhoneNumber" style="color:red"></span>
                                                </div>
                                                <div class="col-12 form-group">
                                                    <input type="checkbox" id="accepted" asp-for="AcceptedTerms">
                                                    <label for="accepted">
                                                        You accept our <a href="#" class="">
                                                            Terms and Conditions and Privacy
                                                            Policy
                                                        </a>
                                                    </label><br />
                                                    <span asp-validation-for="AcceptedTerms" style="color:red"></span>
                                                </div>
                                                <div class="form-group">
                                                    <button type="submit" class="theme-btn btn-style-one ">Register</button>
                                                </div>
                                            </form>
                                        </div>

                                    </div>
                                </div>

                                <!--Tab-->
                                <div class="tab" id="reg-employer">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <!--Register Form-->
                                            <form method="post" asp-controller="Users" asp-action="Register">


                                                <div class="form-group">
                                                    <label>Email <sup class="text-danger">*</sup></label>
                                                    <input type="email" id="email1" asp-for="Email" placeholder="Email" required>
                                                    <span asp-validation-for="Email"style="color:red"></span>
                                                </div>

                                                <div class="form-group">
                                                    <label>Password <sup class="text-danger">*</sup></label>
                                                    <input id="password" type="password" asp-for="Password" placeholder="Password" required>
                                                    <span asp-validation-for="Password" style="color:red"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label>Confirm Password <sup class="text-danger">*</sup></label>
                                                    <input id="confirmPassword" asp-for="ConfirmPassword" type="password" placeholder="Confirm Password " required>
                                                    <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                                                </div>

                                                <div class="form-group ">
                                                    <label>Company name <sup class="text-danger">*</sup></label>
                                                    <input type="text" placeholder="Company name" id="company" asp-for="CompanyName" required>
                                                    <span asp-validation-for="CompanyName" style="color:red"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label>Phone Number <sup class="text-danger">*</sup></label>
                                                    <input type="text" placeholder="Phone Number" asp-for="PhoneNumber" id="phone" required>
                                                    <span asp-validation-for="PhoneNumber" style="color:red"></span>
                                                </div>
                                                <div class="col-12 form-group">
                                                    <input type="checkbox" id="accepted" asp-for="AcceptedTerms">
                                                    <label for="accepted">
                                                        You accept our <a href="#" class="">
                                                            Terms and Conditions and Privacy
                                                            Policy
                                                        </a>
                                                    </label><br />
                                                    <span asp-validation-for="AcceptedTerms" style="color:red"></span>
                                                </div>
                                                <div class="form-group">
                                                    <button class="theme-btn btn-style-one" type="submit">
                                                        Register
                                                    </button>
                                                </div>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Tab Box  -->
                    </div>
                </div>
                <!--End Register Form -->
            </div>
        </div>
    </div>
</div>
<!-- End Modal Register -->